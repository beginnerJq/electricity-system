.title {
  width: 300px;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 0;
}
.avatar-wrap {
  float: right;
  height: 100%;
  padding: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
  cursor: pointer;
  & > span:first-child {
    margin-right: 10px;
  }
  & > span {
    line-height: 1;
  }
}
