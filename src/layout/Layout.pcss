.title {
  width: 452px;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 0;
  font-size: 30px;
  color: #5c6d7be0;
  & > img {
    margin-top: 6px;
  }
}
.avatar-wrap {
  float: right;
  height: 100%;
  padding: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
  cursor: pointer;
  & > span:first-child {
    margin-right: 10px;
  }
  & > span {
    line-height: 1;
  }
}
